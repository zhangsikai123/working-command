#!/bin/bash

## DOCKER ##
function dm(){
 docker-machine $@
}

function dmchange(){
 eval $(docker-machine env $1)
}

## GIT
function thisbranch(){
    git branch | cut -d ' ' -f2
}

function tb(){
	thisbranch
}

function ggpush(){
	git push --set-upstream origin $(thisbranch)
}

function gagc(){
	git add .;git commit -m "$1"
}

function newbranch(){
	git checkout develop;
	git pull;
	git checkout -b $1
}

function dbranch(){
	git checkout develop;
	git branch -D $1
}

function gsp(){
	git stash pop
}

function gc(){
	git checkout $1;
}

function gb(){
	git branch $1
}

function gs(){
	git status
}

function gags(){
	git add .;git stash
}

function gtag(){
  if test $1 = "check"
  then
	git tag -l | grep release-
  else
  	git tag $1;
  	git push origin $1;
  fi
}

function gam(){
  # git add + merge
  git add .;
  git merge --continue
}

function gar(){
  # git add + rebase
  git add .;
  git rebase --continue
}



function gagm(){
	git add .;
	git commit --amend
}
function gl(){
	git log
}

function co(){
	git log | grep commit -m 1 | cut -d ' ' -f2
}

function rebase(){
	current_branch=$(git branch| grep \* | cut -d ' ' -f2);
	git fetch -a;
	git checkout $1;
	git pull;
	git checkout $current_branch;
	git rebase $1;
}

