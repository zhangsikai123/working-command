	echo "start autopep8 ..."
	autopep8 -r -i $1
}

function myip(){
    echo "LAN:" $(ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1')
    echo "WAN:" $(curl icanhazip.com)
}

# find process
function findp(){
	ps aux | grep $1
}

function zkCli(){
	cd ~/Desktop/myCode/zookeeper-3.3.6/bin/;
	./zkCli.sh
}


function amend(){
	git commit --amend
}

function arcpush(){
	rebase develop;
	arc diff develop --create
}

function coarc(){
        gl | grep Differential\ Revision: -m 1
}

function arcupdate(){
	arc_rev=$1
	echo $1
	if test arc_rev=""
	then
		arc_rev=$(coarc | cut -d / -f4)
	fi
	rebase develop;
	echo "update arc:"
	echo $arc_rev
	arc diff develop --update $arc_rev
}

function replace(){
  file=$1
  str=$2
  with=$3
  sed -i.bak "s/${str}/${with}/g" $file;rm -r ${file}.bak
}

